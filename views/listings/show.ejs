
<% layout("layouts/boilerplate") %>
<body>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<% if (success && success.length > 0) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
<% } %>

  <div class="container mt-4">
    <h3><%= list.title %></h3>
    <br>
    <div class="row">
      <!-- Image Column -->
      <div class="col-md-4 listing-card">
        <img src="<%= list.image.url %>" class="img-fluid rounded" style="height: 20rem; object-fit: cover;" alt="Listing Image">
      </div>

      <!-- Details Column -->
      <div class="col-md-8">
        <!-- <h5 class="card-title"><%= list.title %></h5> -->
         <p class="card-text">Owned by <i><%= list.owner.username %></i></p>
        <p class="card-text"><%= list.description %></p>
        <h4>â‚¹<%= list.price.toLocaleString("en-IN") %></h4>
        <h5><%= list.location %>, <%= list.country %></h5>

        <!-- Edit and Delete Buttons Side-by-Side -->
         <% if(currUser && currUser._id.equals(list.owner._id)){ %>
        <div class="mt-3 d-flex gap-2">
          <a href="/listings/<%= list._id %>/edit" class="btn btn-primary">Edit</a>
          <form method="POST" action="/listings/<%= list._id %>?_method=DELETE">
            <button type="submit" class="btn btn-danger" style="background-color:black !important; color:whitesmoke !important;">Delete</button>
          </form>
        </div>
        <% } %>
        <div class="col-md-8 mb-3 mt-3">
          </hr><% if(currUser) {%>
          <h4>leave a Review</h4>
           <form action="/listings/<%= list._id %>/reviews" method="post"
             novalidate 
             class="needs-validation">
               
                 <div class="mb-3 mt-3"></div>
                 <label class="form-label" for="rating" >Rating</label>
          <fieldset class="starability-slot">
                
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
           </div>
                <div class="mb-3 mt-3" >
                  <label for="comment" class="form-label">Comments</label>
                  <textarea name="review[comment]" 
                  class="form-control"
                   id="comment" cols="40" rows="3" 
                   required >
                  </textarea>
                  <div class="invalid-feedback">please add comment</div>
                </div>
                  <button class="btn btn-outline-dark">submit</button>
           </form>
           <% } %>
           <hr>
           <p>All Reviews</p>
         <div class="row">
            <% for(review of list.reviews){ %>
             <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5>@<%=review.author.username  %></h5>
                <p class="starability-result card-text" data-rating="<%=review.rating  %>"></p>
                <p><%=review.comment  %></p>
                <form class="mb-3" method="post"
                  action="/listings/<%=list._id%>/reviews/<%=review._id%>?_method=delete">
                  <button class="btn btn-sm btn-dark" style="background-color:black !important;">Delete</button>
                </form>
              </div>
             </div>
           <% } %>
          
          </div>
        </div>
      </div>
        
      </div>
    </div>
    
  </div>
</body>
