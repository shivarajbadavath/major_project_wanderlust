<% layout("layouts/boilerplate") %>

<body>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>

  <% if (success && success.length > 0) { %>
    <div class="alert alert-success text-center fw-bold">
      <%= success %>
    </div>
  <% } %>

  <div class="container mt-4">
    <h3><%= list.title %></h3>
    <br>

    <div class="row">
      <!-- Image Column -->
      <div class="col-md-4 listing-card">
        <img 
          src="<%= list.image.url %>" 
          class="img-fluid rounded"
          style="height: 20rem; object-fit: cover;"
          alt="Listing Image"
        >
      </div>

      <!-- Details Column -->
      <div class="col-md-8">
        <p class="card-text">
          Owned by <i><%= list.owner.username %></i>
        </p>

        <p class="card-text"><%= list.description %></p>

        <h4>â‚¹<%= list.price.toLocaleString("en-IN") %></h4>
        <h5><%= list.location %>, <%= list.country %></h5>

        <!-- BOOK NOW BUTTON -->
        <% if (currUser && !currUser._id.equals(list.owner._id)) { %>
          <form 
            action="/listings/<%= list._id %>/book" 
            method="POST" 
            class="mt-3"
          >
            <button class="btn btn-success btn-lg">
              Book Now
            </button>
          </form>
        <% } %>

        <!-- Edit & Delete (Owner only) -->
        <% if (currUser && currUser._id.equals(list.owner._id)) { %>
          <div class="mt-3 d-flex gap-2">
            <a href="/listings/<%= list._id %>/edit" class="btn btn-primary">
              Edit
            </a>

            <form method="POST" action="/listings/<%= list._id %>?_method=DELETE">
              <button 
                type="submit" 
                class="btn btn-danger"
                style="background-color:black !important; color:whitesmoke !important;"
              >
                Delete
              </button>
            </form>
          </div>
        <% } %>

        <!-- REVIEWS SECTION -->
        <div class="col-md-8 mb-3 mt-4">
          <% if (currUser) { %>
            <h4>Leave a Review</h4>

            <form 
              action="/listings/<%= list._id %>/reviews"
              method="POST"
              novalidate
              class="needs-validation"
            >
              <label class="form-label">Rating</label>

              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
                <input type="radio" id="rate1" name="review[rating]" value="1" />
                <label for="rate1">1 star</label>
                <input type="radio" id="rate2" name="review[rating]" value="2" />
                <label for="rate2">2 stars</label>
                <input type="radio" id="rate3" name="review[rating]" value="3" />
                <label for="rate3">3 stars</label>
                <input type="radio" id="rate4" name="review[rating]" value="4" />
                <label for="rate4">4 stars</label>
                <input type="radio" id="rate5" name="review[rating]" value="5" />
                <label for="rate5">5 stars</label>
              </fieldset>

              <div class="mb-3 mt-3">
                <label class="form-label">Comments</label>
                <textarea
                  name="review[comment]"
                  class="form-control"
                  rows="3"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please add a comment
                </div>
              </div>

              <button class="btn btn-outline-dark">
                Submit
              </button>
            </form>
          <% } %>

          <hr>
          <p class="fw-bold">All Reviews</p>

          <div class="row">
            <% for (review of list.reviews) { %>
              <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                  <h5>@<%= review.author.username %></h5>
                  <p 
                    class="starability-result"
                    data-rating="<%= review.rating %>"
                  ></p>
                  <p><%= review.comment %></p>

                  <form
                    method="POST"
                    action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE"
                  >
                    <button class="btn btn-sm btn-dark">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
