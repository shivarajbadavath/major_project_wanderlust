<% layout("layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>edit page</h3>
    <form method="POST" action="/listings/<%=list._id%>/?_method=put" class="needs-validation" novalidate enctype="multipart/form-data" >
        <div class="mb-3">
        <label for="tittle" class="form-label">tittle</label>
        <input name="listing[title]" value="<%=list.title  %>" type="text" class="form-control" required>
        <div class="invalid-feedback"> tittle is required </div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <input name="listing[description]" value="<%=list.description  %>" type="text" class="form-control" required>
        <div class="invalid-feedback"> please enter description </div>
        </div>
        <div class="mb-3">
           original image <br/>
        <img src="<%= originalImageUrl  %>"/>
        </div>
       <div class="mb-3">

  <label for="image" class="form-label"> upload Image </label>
  <input name="listing[image]" value="<%= list.image.url %>" type="file" class="form-control" reqiured>
</div>

        <div class="row">
            <div class="mb-3 col-md-4"  >
        <label for="price" class="form-label">price</label>
        <input name="listing[price]" value="<%=list.price  %>" type="text" class="form-control" required>
        <div class="invalid-feedback"> please enter valid price </div>
        </div>
        <div class="mb-3 col-md-8">
        <label for="contry" class="form-label">contry</label>
        <input name="listing[country]" value="<%=list.country  %>" type="text" class="form-control" required>
        <div class="invalid-feedback">please enter country </div>
        </div>
        </div>
        <div class="mb-3">
        <label for="location" class="form-label">location</label>
        <input name="listing[location]" value="<%=list.location  %>" type="text" class="form-control" required>
        <div class="invalid-feedback"> location is required </div>
        </div>
        <button class="btn btn-dark">edit</button>
    </form>
    </div>
</div>
</body>
